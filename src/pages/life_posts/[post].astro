---
import MainLayout from "../../layouts/MainLayout.astro";
import BreadCrumbs from "../../components/BreadCrumbs";
import PostLayout from "../../layouts/PostLayout.astro";
import PostFooter from "../../layouts/PostFooter";
import { getCollection, render } from "astro:content";
export async function getStaticPaths() {
    const allTechPosts = await getCollection("lifePosts");
    return allTechPosts.map((p) => {
        return { params: { post: p.data.slug }, props: { p } };
    });
}

const { p } = Astro.props;
const { Content } = await render(p);

const url = Astro.url;
---

<MainLayout showRegularFooter={false}>
    <PostLayout>
        <BreadCrumbs url={url} path={p.data.slug} title={p.data.title} />
        <Content />
        <PostFooter author={p.data.author} date={p.data.date} />
    </PostLayout>
</MainLayout>
